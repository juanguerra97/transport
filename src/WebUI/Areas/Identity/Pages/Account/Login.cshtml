@page
@model LoginModel

@{
    ViewData["Title"] = "Inicio de sesión";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-xl-4">
        <section>
            <form id="account" method="post">
                <h2 class="text-center m-0">Inicio de Sesi&oacute;n</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger text-small"></div>
                <div class="form-floating mt-1">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger text-small"></span>
                </div>
                <div class="form-floating mt-1">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger text-small"></span>
                </div>
                <div class="mt-2">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Ingresar</button>
                </div>
                <div class="mt-2">
                    @*<p class="m-0 p-0">
                        <a id="forgot-password" asp-page="./ForgotPassword">¿Olvid&oacute; su contrase&ntilde;a?</a>
                    </p>*@
                    <p class="m-0 p-0">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear cuenta</a>
                    </p>
                    @*<p class="m-0 p-0">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de confirmación.</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
